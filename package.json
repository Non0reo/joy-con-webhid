{
	"name": "joy-con-webhid",
	"version": "0.7.0",
	"description": "Joy-Con over WebHID ",
	"type": "module",
	"keywords": [
		"joycon",
		"webhid",
		"gamepad",
		"controller"
	],
	"scripts": {
		"server": "npx vite",
		"start": "npx http-server",
		"check": "npx @biomejs/biome check --write ./src/*.ts",
		"build": "npx tsc && npx vite build",
		"fix": "npx prettier --write ."
	},
	"exports": {
		".": {
			"import": "./dist/joy-con-webhid.es.js",
			"types": "./dist/index.d.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tomayac/joy-con-webhid.git"
	},
	"author": "Thomas Steiner (tomac@google.com)",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/tomayac/joy-con-webhid/issues"
	},
	"homepage": "https://github.com/tomayac/joy-con-webhid#readme",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^24.0.1",
		"@types/w3c-web-hid": "^1.0.6",
		"http-server": "^14.1.1",
		"i": "^0.3.7",
		"npm": "^11.4.2",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-plugin-dts": "^4.5.4"
	},
	"dependencies": {
		"ahrs": "^1.3.2"
	}
}
